<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gradient-to-r from-blue-900 via-teal-800 to-green-800 text-white min-h-screen flex flex-col items-center"
  >
    <div class="container mx-auto p-6">
      <!-- Header -->
      <h1
        class="text-4xl font-extrabold text-center text-yellow-400 mb-8 drop-shadow-lg"
      >
        ğŸ“Œ Task Manager
      </h1>

      <!-- Task Form -->
      <div
        class="max-w-2xl mx-auto bg-white/10 backdrop-blur-md p-6 rounded-lg shadow-xl border border-white/20"
      >
        <h2 class="text-2xl font-semibold mb-4 text-yellow-300">
          Add a New Task
        </h2>
        <form action="/create" method="post" class="space-y-4">
          <input
            class="w-full p-3 bg-white/20 text-white rounded-md outline-none focus:ring-2 focus:ring-emerald-400 placeholder-white/60"
            type="text"
            placeholder="Enter task title"
            name="title"
            required
          />
          <textarea
            class="w-full p-3 bg-white/20 text-white rounded-md outline-none resize-none focus:ring-2 focus:ring-emerald-400 placeholder-white/60"
            placeholder="Write task details..."
            name="details"
            required
          ></textarea>
          <button
            class="w-full bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold py-2 px-4 rounded-md transition duration-200 shadow-lg"
          >
            Create Task
          </button>
        </form>
      </div>

      <!-- Task List -->
      <div class="mt-10 w-full">
        <h2 class="text-2xl font-semibold mb-4 text-center text-yellow-300">
          Your Tasks
        </h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% if (files.length > 0) { %> <% files.forEach(function(value) { %>
          <div
            class="task bg-white/10 backdrop-blur-lg p-5 rounded-lg shadow-xl border border-white/20 transform transition hover:scale-105"
          >
            <h1 class="text-xl font-bold truncate text-white"><%= value %></h1>
            <div class="flex justify-between items-center mt-3">
              <a
                class="text-emerald-400 hover:text-emerald-300"
                href="/file/<%= value %>"
                >Read More</a
              >
              <a
                class="text-blue-400 hover:text-blue-300"
                href="/edit/<%= value %>"
                >Edit Task</a
              >
            </div>

            <!-- Delete Button For Task -->
            <a
              href="/delete/<%= value %>"
              class="block text-center mt-3 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md transition duration-200 shadow-md"
              onclick="return confirm('Are you sure you want to delete this task?');"
            >
              Delete Task
            </a>
          </div>
          <% }) %> <% } else { %>
          <p class="text-gray-300 text-center">No tasks added yet.</p>
          <% } %>
        </div>
      </div>
    </div>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
